<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sufnatech.meetingofhearts">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_moh"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_moh_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.startapp.sdk.APPLICATION_ID"
            android:value="@string/startapp_id" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_id"/>

        <meta-data android:name="com.startapp.sdk.RETURN_ADS_ENABLED"
            android:value="false" />

        <activity
            android:hardwareAccelerated="true"
            android:name="com.sufnatech.meetingofhearts.ui.ConversationsActivity"
            android:label="Chat Log" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.sufnatech.meetingofhearts"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="com.sufnatech.meetingofhearts.players.VideoPlayerActivity"
            android:label="Video Player"
            android:noHistory="true" />
        <activity
            android:hardwareAccelerated="true"
            android:name="com.sufnatech.meetingofhearts.ui.ChatActivity"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name="com.sufnatech.meetingofhearts.players.ImageViewerActivity"
            android:label="Picture"
            android:noHistory="true" />
        <activity
            android:hardwareAccelerated="true"
            android:name="com.sufnatech.meetingofhearts.ui.ProfileActivity"
            android:label="Profile" />
        <activity
            android:name="com.sufnatech.meetingofhearts.Authentication.ui.SignUpActivity"
            android:label="Sign Up"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name="com.sufnatech.meetingofhearts.Authentication.ui.LoginActivity"
            android:label="Login"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name="com.sufnatech.meetingofhearts.ui.MainActivity"
            android:hardwareAccelerated="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>