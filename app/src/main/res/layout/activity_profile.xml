<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.ProfileActivity">

    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end|top"
                android:src="@drawable/ic_logout_white"
                android:backgroundTint="@color/colorBlue"
                app:borderWidth="0dp"
                android:layout_margin="10dp"
                android:onClick="SignOut" />
            <RelativeLayout
                android:id="@+id/relative_img"
                android:layout_below="@id/logout"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user_placeholder_gray"
                    android:transitionName="user_img_transition"
                    android:layout_centerHorizontal="true"
                    android:onClick="enlargeImage"
                    />
                <ImageView
                    android:id="@+id/img_upload_gallery"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toEndOf="@id/user_img"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:onClick="addImage"
                    android:src="@drawable/ic_edit_img_blue"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/user_name"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/relative_img"
                android:textColor="@color/colorDark"
                android:textSize="20sp"
                android:maxLength="20"
                android:maxLines="1" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorBlue"
                android:layout_below="@id/user_name"/>

            <ImageView
                android:id="@+id/img_edit_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_edit_blue"
                android:onClick="editProfile"
                android:layout_below="@id/line1"
                android:layout_alignParentEnd="true"/>
            <LinearLayout
                android:id="@+id/liner_info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                android:layout_below="@id/img_edit_profile">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/phone_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_phone_blue"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/user_phone"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/phone_img"
                        android:textColor="@color/colorDark"
                        android:textSize="15sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/gender_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_gender_blue"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/user_gender"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/gender_img"
                        android:textColor="@color/colorDark"
                        android:textSize="15sp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/liner_info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                android:layout_below="@id/liner_info1"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/age_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_age_blue"
                        android:layout_centerHorizontal="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:layout_below="@id/age_img">
                        <TextView
                            android:id="@+id/user_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorDark"
                            android:textSize="15sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Years"
                            android:background="@color/transparent"
                            android:textColor="@color/colorDark"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/nationality_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_nationality_blue"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/user_nationality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/nationality_img"
                        android:layout_marginTop="3dp"
                        android:background="@color/transparent"
                        android:textColor="@color/colorDark"
                        android:textSize="15sp"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/line2"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlue"
                android:layout_below="@id/liner_info2"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@id/line2"
                android:id="@+id/interests_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interests"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorDark"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="3dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/interests_txt"
                android:id="@+id/user_interests_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@id/user_interests_recycler"
                android:id="@+id/new_interests_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Interests"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorDark"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="3dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/new_interests_txt"
                android:id="@+id/new_interests_recycler"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                />
        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_done_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_done_white"
        android:layout_margin="15dp"
        android:backgroundTint="@color/colorBlue"
        android:visibility="gone"
        app:borderWidth="0dp"
        android:onClick="doneUpdate"/>
    <ProgressBar
        android:id="@+id/profile_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminateDrawable="@drawable/custom_progress_bar_blue"
        android:visibility="visible" />

</RelativeLayout>