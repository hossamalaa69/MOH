<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/host_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorBlue2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/media_layout"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/photoImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:transitionName="user_img_transition"
                        android:visibility="visible"
                        />
                    <ImageView
                        android:id="@+id/ic_play_video"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_play_blue"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/messageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    tools:text="Hello, Dexter Morgan!" />
                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite2"
                    android:textSize="12sp"
                    tools:text="02:15 AM" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/guest_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorGray2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/media_layout2"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/photoImageView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:transitionName="user_img_transition"
                        android:visibility="visible"
                        />
                    <ImageView
                        android:id="@+id/ic_play_video2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_play_blue"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/messageTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    tools:text="Hello, Kyle Butler!" />

                <TextView
                    android:id="@+id/dateTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite2"
                    android:textSize="12sp"
                    tools:text="02:16 AM" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>